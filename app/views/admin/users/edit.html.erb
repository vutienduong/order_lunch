<h1>[Admin] Edit User</h1>
<%= form_for @user, url: admin_user_path do |f| %>
    <p><%= f.label :username %></p>
    <p><%= f.text_field :username %></p> <br>

    <p><%= f.label :email %></p>
    <p><%= f.text_field :email %></p><br>

    <p><%= f.label :password %></p>
    <p><%= f.text_field :password %></p><br>

    <p><%= f.check_box(:admin, {}, 1, 0) %>
      <%= f.label "Is admin?" %></p>

    <p><%= f.submit %></p>
<% end %>
<%= link_to "Back", admin_user_path(@user), class:"btn btn-default"%>