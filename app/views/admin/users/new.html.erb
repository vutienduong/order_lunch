<h1>New User</h1>
<%= form_for @user, url: admin_users_path do |f| %>
    <p><%= f.label :username %></p>
    <p><%= f.text_field :username %></p> <br>

    <p><%= f.label :email %></p>
    <p><%= f.text_field :email %></p><br>

    <p><%= f.label :slack_name %></p>
    <p><%= f.text_field :slack_name %></p>

    <p><%= f.label :password %></p>
    <p><%= f.text_field :password %></p><br>

    <p><%= f.check_box(:admin, {}, 1, 0) %>
      <%= f.label "Is admin?" %></p>

    <p><%= f.submit %></p>
<% end %>