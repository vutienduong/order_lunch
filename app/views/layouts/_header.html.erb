<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "EH Order Lunch", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
            <li><%= link_to "Home", order_user_path(current_user) %></li>
            <li><%= link_to "How to use", help_path %></li>
            <% if is_admin? %>
                <li><%= link_to "PING SLACK", ping_slack_admin_users_path %></li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Hello!  #{current_user.email}", current_user %></li>
                <li><%= link_to "Settings", '#' %></li>

                <% if current_user.admin? %>
                    <li><%= link_to "Manager Page", manage_admin_users_path %></li>
                <% end %>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>